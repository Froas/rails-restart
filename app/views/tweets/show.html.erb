<p style="color: green"><%= notice %></p>

<%= render @tweet %>
<br>
<div>
  <% if user_signed_in? %>
   <%= link_to "Edit this tweet", edit_tweet_path(@tweet), class:"btn btn-outline-primary" %> |
  <% end %>
    
  <%= link_to "Back to tweets", tweets_path, class:"btn btn-outline-info" %>
<br>
<br>

   <% if user_signed_in? %>
    <%= button_to "Destroy this tweet", @tweet, method: :delete, class:"btn btn-outline-dark" %>
  <% end %>
</div>
